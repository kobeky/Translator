<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2d9aa6"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_back_register"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@mipmap/sideslip_login_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="帐号注册"
        android:textSize="25sp"
        android:textColor="#434040"
        android:gravity="center_vertical"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_margin="15dp">
        <EditText
            android:id="@+id/et_userName_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColorHint="#000000"
            android:padding="5dp"
            android:hint="请输入账号（由汉字.字母.数字组成）"
            android:background="@null"/>
        <EditText
            android:id="@+id/et_pass_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="#000000"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:hint="请输入密码（由字母.数字组成）"/>
        <EditText
            android:id="@+id/et_passAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:textColorHint="#000000"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@null"/>
    </LinearLayout>
<Button
    android:id="@+id/bt_register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:text="注册"
    android:background="#22978c"/>
</LinearLayout>